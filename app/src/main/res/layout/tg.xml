<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
>
    
    <Space
            android:id="@+id/tg_scorepadder"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="parent"
    />
    
    <androidx.cardview.widget.CardView
            android:id="@+id/tg_root"
            android:layout_width="96dp"
            android:layout_height="42dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:elevation="10dp"
            android:minHeight="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:cardBackgroundColor="@color/background"
            app:cardCornerRadius="16dp"
            android:padding="0px"
            app:cardUseCompatPadding="false"
            app:contentPadding="0px"
            android:clickable="true"
    >
        
        <com.francescozoccheddu.tdmclient.ui.topgroup.ScoreComponent
                android:id="@+id/tg_score"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:alpha="0"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="26dp"
                android:layout_marginStart="20dp"
        />
        
        <com.francescozoccheddu.tdmclient.ui.topgroup.SearchComponent
                android:id="@+id/tg_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:layout_gravity="center"
                android:alpha="0"
                android:layout_margin="4dp"
        />
    
    </androidx.cardview.widget.CardView>

</merge>
