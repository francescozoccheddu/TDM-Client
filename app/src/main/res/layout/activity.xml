<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        tools:context=".ui.MainActivity">


    <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <com.mapbox.mapboxsdk.maps.MapView
                xmlns:mapbox="http://schemas.android.com/apk/res-auto"
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                mapbox:mapbox_uiCompass="false"
                mapbox:mapbox_cameraZoomMin="10"
                mapbox:mapbox_cameraZoomMax="18"
                mapbox:mapbox_uiRotateGestures="false"
                mapbox:mapbox_uiTiltGestures="false"
                mapbox:mapbox_uiLogo="false"
                mapbox:mapbox_uiAttribution="false"
                mapbox:mapbox_renderTextureMode="true"
        />
    </FrameLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esteso"
            app:icon="@android:drawable/ic_secure"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|end"
            app:layout_anchorGravity="bottom|end"
    />

    <FrameLayout
            android:id="@+id/sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:behavior_hideable="true"
            app:behavior_peekHeight="80dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:background="@drawable/sheet_background"
            android:elevation="16dp"
            android:clickable="true"
    >

        <include layout="@layout/sheet"/>

    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>