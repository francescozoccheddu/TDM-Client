<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sb_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/scrim"
            android:id="@+id/sb_scrim"
            android:alpha="0"
            android:clickable="false"
    />
    
    <androidx.cardview.widget.CardView
            android:id="@+id/sb_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="@dimen/sb_margin"
            android:alpha="0"
            android:padding="0dp"
            app:contentPadding="0dp"
            app:cardCornerRadius="4dp"
            android:clickable="true"
            app:cardUseCompatPadding="false"
    >
        
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="vertical"
                      android:id="@+id/sb_content"
                      android:visibility="gone"
                      android:layout_margin="@dimen/sb_padding"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="42dp"
                            android:padding="6dp"
                            android:layout_gravity="center"
                            android:gravity="center"
            >
                
                <ImageButton
                        android:id="@+id/tg_search_close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_back"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="2dp"
                        android:layout_marginEnd="6dp"
                        android:foregroundGravity="center"
                />
                
                <EditText
                        android:id="@+id/tg_search_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tg_search_close"
                        android:layout_toStartOf="@id/tg_search_clear"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_centerVertical="true"
                        android:hint="@string/search_hint"
                        android:background="@null"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:gravity="start|center_vertical"
                        android:singleLine="true"
                        android:textCursorDrawable="@null"
                />
                
                <ImageButton
                        android:id="@+id/tg_search_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_cancel"
                        android:background="?selectableItemBackgroundBorderless"
                        android:layout_toStartOf="@id/tg_search_loading"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:layout_margin="2dp"
                        android:foregroundGravity="center"
                />
                
                <ProgressBar
                        android:layout_alignParentEnd="true"
                        android:id="@+id/tg_search_loading"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:indeterminateOnly="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:layout_margin="2dp"
                        android:foregroundGravity="center"
                />
            
            </RelativeLayout>
            
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/sb_search_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:layout_gravity="center"
                    android:visibility="gone"
            />
        
        </LinearLayout>
    
    </androidx.cardview.widget.CardView>

</FrameLayout>
