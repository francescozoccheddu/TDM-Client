<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:motion="http://schemas.android.com/apk/res-auto">
    
    <Transition
            motion:constraintSetStart="@id/bg_cs_action"
            motion:constraintSetEnd="@id/bg_cs_walk"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_action"
            motion:constraintSetEnd="@id/bg_cs_info"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_action"
            motion:constraintSetEnd="@id/bg_cs_duration"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_action"
            motion:constraintSetEnd="@id/bg_cs_hidden"
            motion:duration="100"
            motion:motionInterpolator="linear"
    />
    
    <Transition
            motion:constraintSetStart="@id/bg_cs_walk"
            motion:constraintSetEnd="@id/bg_cs_action"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_walk"
            motion:constraintSetEnd="@id/bg_cs_info"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_walk"
            motion:constraintSetEnd="@id/bg_cs_duration"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_walk"
            motion:constraintSetEnd="@id/bg_cs_hidden"
            motion:duration="100"
            motion:motionInterpolator="linear"
    />
    
    <Transition
            motion:constraintSetStart="@id/bg_cs_info"
            motion:constraintSetEnd="@id/bg_cs_walk"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_info"
            motion:constraintSetEnd="@id/bg_cs_action"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_info"
            motion:constraintSetEnd="@id/bg_cs_duration"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_info"
            motion:constraintSetEnd="@id/bg_cs_hidden"
            motion:duration="100"
            motion:motionInterpolator="linear"
    />
    
    <Transition
            motion:constraintSetStart="@id/bg_cs_duration"
            motion:constraintSetEnd="@id/bg_cs_walk"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_duration"
            motion:constraintSetEnd="@id/bg_cs_info"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_duration"
            motion:constraintSetEnd="@id/bg_cs_action"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_duration"
            motion:constraintSetEnd="@id/bg_cs_hidden"
            motion:duration="100"
            motion:motionInterpolator="linear"
    />
    
    <Transition
            motion:constraintSetStart="@id/bg_cs_hidden"
            motion:constraintSetEnd="@id/bg_cs_walk"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_hidden"
            motion:constraintSetEnd="@id/bg_cs_info"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_hidden"
            motion:constraintSetEnd="@id/bg_cs_duration"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    <Transition
            motion:constraintSetStart="@id/bg_cs_hidden"
            motion:constraintSetEnd="@id/bg_cs_action"
            motion:duration="200"
            motion:motionInterpolator="easeOut"
    />
    
    <ConstraintSet android:id="@+id/bg_cs_action">
        
        <Constraint
                android:id="@+id/bg_card"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="10dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
        >
            <CustomAttribute
                    motion:attributeName="radius"
                    motion:customDimension="36dp"/>
        </Constraint>
        
        <Constraint
                android:id="@+id/bg_scrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
        />
    
    </ConstraintSet>
    
    <ConstraintSet android:id="@+id/bg_cs_info">
        
        <Constraint
                android:id="@+id/bg_card"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
        >
            <CustomAttribute
                    motion:attributeName="radius"
                    motion:customDimension="20dp"/>
        </Constraint>
        
        <Constraint
                android:id="@+id/bg_scrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
        />
    
    </ConstraintSet>
    
    <ConstraintSet android:id="@+id/bg_cs_walk">
        
        <Constraint
                android:id="@+id/bg_card"
                android:layout_width="200dp"
                android:layout_height="140dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
        >
            <CustomAttribute
                    motion:attributeName="radius"
                    motion:customDimension="10dp"/>
        </Constraint>
        
        <Constraint
                android:id="@+id/bg_scrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
        />
    
    </ConstraintSet>
    
    <ConstraintSet android:id="@+id/bg_cs_duration">
        
        <Constraint
                android:id="@+id/bg_card"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="4dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
        >
            <CustomAttribute
                    motion:attributeName="radius"
                    motion:customDimension="10dp"/>
        </Constraint>
        
        <Constraint
                android:id="@+id/bg_scrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
        />
    
    </ConstraintSet>
    
    <ConstraintSet android:id="@+id/bg_cs_hidden">
        
        <Constraint
                android:id="@+id/bg_card"
                android:layout_width="0px"
                android:layout_height="0px"
                android:layout_marginEnd="48dp"
                android:layout_marginBottom="48dp"
                android:elevation="0dp"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
        >
            <CustomAttribute
                    motion:attributeName="radius"
                    motion:customDimension="36dp"/>
        </Constraint>
        
        <Constraint
                android:id="@+id/bg_scrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0"
        />
    
    </ConstraintSet>

</MotionScene>
