<resources>
    
    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryDark">@color/backgroundDark</item>
        <item name="colorAccent">@color/foreground</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:tint">@color/foreground</item>
        <item name="materialCardViewStyle">@style/AppTheme.CardStyle</item>
        <!--
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        -->
    </style>
    
    <style name="AppTheme.CardStyle"
           parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/background</item>
    </style>

</resources>
