<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/bg_info_rll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_action_size">
    
    <ProgressBar
            android:id="@+id/bg_info_pb"
            android:layout_width="@dimen/bg_action_size"
            android:layout_height="@dimen/bg_action_size"
            android:layout_gravity="start|center_vertical"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            android:padding="14dp" />
    
    <ImageView
            android:id="@+id/bg_info_iv"
            android:layout_width="@dimen/bg_action_size"
            android:layout_height="@dimen/bg_action_size"
            android:layout_gravity="start|center_vertical"
            android:padding="18dp"
            android:visibility="gone" />
    
    <RelativeLayout
            android:id="@+id/bg_info_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        
        <LinearLayout
                android:id="@+id/bg_info_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignWithParentIfMissing="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/bg_info_bt"
                android:orientation="vertical">
            
            <TextView
                    android:id="@+id/bg_info_tv"
                    style="@style/TextAppearance.MaterialComponents.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2" />
            
            <TextView
                    android:id="@+id/bg_info_ext_tv"
                    style="@style/TextAppearance.MaterialComponents.Subtitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/foregroundHint"
                    android:textSize="11sp"
                    android:visibility="gone" />
        
        </LinearLayout>
        
        <com.google.android.material.button.MaterialButton
                android:id="@+id/bg_info_bt"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:visibility="gone" />
    
    </RelativeLayout>

</LinearLayout>
