<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bg_action_size">
    
    <ProgressBar
            android:layout_height="@dimen/bg_action_size"
            android:layout_width="@dimen/bg_action_size"
            android:id="@+id/bg_info_pb"
            android:indeterminateOnly="true"
            android:indeterminate="true"
            android:layout_gravity="start|center_vertical"
            android:padding="14dp"
    />
    
    <ImageView
            android:id="@+id/bg_info_iv"
            android:layout_width="@dimen/bg_action_size"
            android:layout_height="@dimen/bg_action_size"
            android:layout_gravity="start|center_vertical"
            android:padding="18dp"
            android:visibility="gone"
    />
    
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bg_info_rl"
    >
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/bg_info_tv"
                style="@style/TextAppearance.MaterialComponents.Body1"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/bg_info_bt"
                android:layout_alignWithParentIfMissing="true"
        />
        
        <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bg_info_bt"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
        />
    
    </RelativeLayout>

</LinearLayout>
