<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/us_gain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/us_gain_text_size"
        android:background="@drawable/us_bg_gain"
        android:elevation="@dimen/us_gain_elevation"
        android:orientation="horizontal"
        android:gravity="left|center_vertical"
        android:layout_marginRight="@dimen/us_gain_padding_end"
        android:visibility="gone"
>
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="@dimen/us_gain_text_size_extra"
            android:layout_marginRight="1sp"
            android:layout_marginLeft="1sp"
            android:alpha="0.8"
    />
    
    <com.robinhood.ticker.TickerView
            android:id="@+id/us_gain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/us_level_text_size"
            android:text="0"
            android:layout_marginRight="3sp"
            app:ticker_defaultPreferredScrollingDirection="up"
            app:ticker_defaultCharacterList="number"
            app:ticker_animationDuration="200"
    />

</LinearLayout>