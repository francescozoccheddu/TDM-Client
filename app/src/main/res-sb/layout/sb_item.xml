<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        android:padding="10dp"
        android:clickable="true"
        android:animateLayoutChanges="true"
>
    
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/place"
               android:id="@+id/sb_item_icon"
               android:layout_marginEnd="16dp"
               android:layout_centerVertical="true"
               android:layout_alignParentStart="true"
               android:tint="@color/sb_foregroundLight"
    />
    
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/sb_item_name"
              android:layout_centerVertical="true"
              android:layout_toEndOf="@id/sb_item_icon"
              android:layout_toStartOf="@id/sb_item_distance"
              android:layout_alignWithParentIfMissing="true"
    />
    
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/sb_item_distance"
              android:visibility="gone"
              android:layout_centerVertical="true"
              android:layout_alignParentEnd="true"
              android:textColor="@color/sb_foregroundLight"
    />

</RelativeLayout>