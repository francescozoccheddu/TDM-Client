<?xml version="1.0" encoding="utf-8"?>
<animated-selector
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    
    <item
            android:id="@+id/frame_search"
            android:drawable="@drawable/sb_search"
            app:sb_state_back="false"
    />
    
    <item
            android:id="@+id/frame_back"
            android:drawable="@drawable/sb_back"
            app:sb_state_back="true"
    />
    
    <transition
            android:fromId="@id/frame_search"
            android:toId="@id/frame_back"
            android:drawable="@drawable/sb_search_to_back"
    />
    
    <transition
            android:fromId="@id/frame_back"
            android:toId="@id/frame_search"
            android:drawable="@drawable/sb_back_to_search"
    />

</animated-selector>